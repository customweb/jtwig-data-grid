<ul {{ pager.dynamicAttributes|join(' ') }}>
	{% if pager.showFirstButton %}
		<li class="pager-start {% if pager.onFirstPage %}active disabled{% endif %}">{% if pager.onFirstPage %}&laquo;{% else %}<a class="ajax-event" href="{{ pager.firstPageUrl }}">&laquo;</a>{% endif %}</li>
	{% endif %}
	{% if pager.showPreviousButton %}
		<li class="pager-previous {% if pager.onFirstPage %}active disabled{% endif %}">{% if pager.onFirstPage %}&lsaquo;{% else %}<a class="ajax-event" href="{{ pager.previousPageUrl }}">&lsaquo;</a>{% endif %}</li>
	{% endif %}
	
	{% for page in pager.pages %}
		<li {% if page.current %}class="active"{% endif %}><a class="ajax-event" href="{{ page.url }}">{{ page.label }}</a></li>
	{% endfor %}
	
	{% if pager.showNextButton %}
		<li class="pager-next {% if pager.onLastPage %}active disabled{% endif %}">{% if pager.onLastPage %}&rsaquo;{% else %}<a class="ajax-event" href="{{ pager.nextPageUrl }}">&rsaquo;</a>{% endif %}</li>
	{% endif %}
	{% if pager.showLastButton %}
		<li class="pager-end {% if pager.onLastPage %}active disabled{% endif %}">{% if pager.onLastPage %}&raquo;{% else %}<a class="ajax-event" href="{{ pager.lastPageUrl }}">&raquo;</a>{% endif %}</li>
	{% endif %}
</ul>